window (title : 'World information') {
    withCloseButton { true }

    size {
        width 320
        height 200
    }

    selectBox (label : 'Locations') {
        items CoreControl.resources[CoreConstants.LOCATION_RESOURCES].values().grep {
                it.type == 'CITY'
              }.collect { it.name }
        on_click {}
    }
}
