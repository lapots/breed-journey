<?xml version="1.0"?>
<calendars>
    <calendar id="saint">
        <!-- calendar start point. something like BC -->
        <seed>0</seed>
        <units>
            <unit id="year">GS</unit>
            <unit id="month" multiple="true">ASC, DESC</unit>
            <unit id="day" multiple="true">BR, EX</unit>
        </units>
        <configurations top="year" bottom="day">
            <configuration id="year">
                <mapping id="day">100</mapping>
                <mapping id="month">2</mapping>
            </configuration>
            <!-- equal means 50 : 50 for days out of 100 when we have two months -->
            <configuration id="month" equalDivision="true"/>
            <configuration id="days">
                <!-- 600 unified seconds to one in-game day -->
                <mapping id="unifiedTime">600</mapping>
            </configuration>
        </configurations>
    </calendar>
</calendars>
